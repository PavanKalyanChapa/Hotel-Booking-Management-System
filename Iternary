import { useParams } from "react-router-dom";
import { useEffect, useState } from "react";
import axios from "axios";
import ItineraryTabs from "./ItineraryTabs";

export default function DestinationDetails() {
  const { id } = useParams();
  const [destination, setDestination] = useState(null);

  useEffect(() => {
    const fetchDestination = async () => {
      try {
        const res = await axios.get(`http://localhost:5000/destinationGuides/${id}`);
        setDestination(res.data);
      } catch (err) {
        console.error(err);
      }
    };
    fetchDestination();
  }, [id]);

  if (!destination) {
    return <p className="text-center mt-5">Loading destination details...</p>;
  }

  return (
    <div className="container my-5">
      <h2 className="mb-3">{destination.title}</h2>
      <p>{destination.summary}</p>
      <img
        src={destination.photo}
        alt={destination.title}
        className="img-fluid rounded mb-4"
      />

      {/* ðŸ‘‰ Itinerary Tabs specific to this destination */}
      <h4 className="mt-5">Plan Your Trip</h4>
      <ItineraryTabs destination={destination.title} />
    </div>
  );
}



import { useState, useEffect } from "react";
import axios from "axios";
import CreateItinerary from "./CreateItinerary";
import ItineraryList from "./ItineraryList";

export default function ItineraryTabs({ destination }) {
  const [activeTab, setActiveTab] = useState("view");
  const [itineraries, setItineraries] = useState([]);

  const fetchItineraries = async () => {
    try {
      const res = await axios.get(
        `http://localhost:5000/tripItineraries?destination=${destination}`
      );
      setItineraries(res.data);
    } catch (error) {
      console.error(error);
    }
  };

  useEffect(() => {
    fetchItineraries();
  }, [destination]);

  const handleItineraryCreated = async () => {
    await fetchItineraries();
    setActiveTab("view");
  };

  return (
    <div className="mt-4">
      <ul className="nav nav-tabs">
        <li className="nav-item">
          <button
            className={`nav-link ${activeTab === "view" ? "active" : ""}`}
            onClick={() => setActiveTab("view")}
          >
            View Itineraries
          </button>
        </li>
        <li className="nav-item">
          <button
            className={`nav-link ${activeTab === "create" ? "active" : ""}`}
            onClick={() => setActiveTab("create")}
          >
            Create Itinerary
          </button>
        </li>
      </ul>

      <div className="tab-content mt-4">
        {activeTab === "view" && (
          itineraries.length > 0 ? (
            <ItineraryList itineraries={itineraries} />
          ) : (
            <div className="text-center py-4">
              <p className="text-muted">No itineraries for {destination} yet.</p>
              <button
                className="btn btn-primary"
                onClick={() => setActiveTab("create")}
              >
                Create Itinerary
              </button>
            </div>
          )
        )}

        {activeTab === "create" && (
          <CreateItinerary
            destination={destination}
            onItineraryCreated={handleItineraryCreated}
          />
        )}
      </div>
    </div>
  );
}


import { useState } from "react";
import axios from "axios";

export default function CreateItinerary({ destination, onItineraryCreated }) {
  const [formData, setFormData] = useState({
    duration: "",
    lodging: "",
    dining: "",
    activities: ""
  });

  const handleChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    try {
      await axios.post("http://localhost:5000/tripItineraries", {
        destination,
        ...formData,
        activities: formData.activities.split(",").map((a) => a.trim())
      });
      onItineraryCreated();
    } catch (error) {
      console.error(error);
    }
  };

  return (
    <form onSubmit={handleSubmit} className="card p-4 shadow-sm">
      <h5>Create Itinerary for {destination}</h5>
      <div className="mb-3">
        <label className="form-label">Duration</label>
        <input
          type="text"
          name="duration"
          className="form-control"
          value={formData.duration}
          onChange={handleChange}
          required
        />
      </div>
      <div className="mb-3">
        <label className="form-label">Lodging</label>
        <input
          type="text"
          name="lodging"
          className="form-control"
          value={formData.lodging}
          onChange={handleChange}
        />
      </div>
      <div className="mb-3">
        <label className="form-label">Dining</label>
        <input
          type="text"
          name="dining"
          className="form-control"
          value={formData.dining}
          onChange={handleChange}
        />
      </div>
      <div className="mb-3">
        <label className="form-label">Activities (comma separated)</label>
        <input
          type="text"
          name="activities"
          className="form-control"
          value={formData.activities}
          onChange={handleChange}
        />
      </div>
      <button type="submit" className="btn btn-success">
        Save Itinerary
      </button>
    </form>
  );
}



export default function ItineraryList({ itineraries }) {
  return (
    <div className="row">
      {itineraries.map((itinerary) => (
        <div key={itinerary.id} className="col-md-6 col-lg-4 mb-4">
          <div className="card shadow-sm h-100">
            <div className="card-body">
              <h5 className="card-title">{itinerary.destination}</h5>
              <p className="card-text">
                <strong>Duration:</strong> {itinerary.duration}
              </p>
              <p className="card-text">
                <strong>Lodging:</strong> {itinerary.lodging}
              </p>
              <p className="card-text">
                <strong>Dining:</strong> {itinerary.dining}
              </p>
              {itinerary.activities && itinerary.activities.length > 0 && (
                <div className="mb-2">
                  <strong>Activities:</strong>
                  <ul className="mt-2">
                    {itinerary.activities.map((act, i) => (
                      <li key={i}>{act}</li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  );
}







import { useEffect, useState } from "react";
import axios from "axios";

export default function ItineraryList({ destinationId }) {
  const [itineraries, setItineraries] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    axios
      .get(`http://localhost:4000/tripItineraries?destinationId=${destinationId}`)
      .then((res) => {
        setItineraries(res.data);
        setLoading(false);
      })
      .catch(() => setLoading(false));
  }, [destinationId]);

  if (loading) {
    return (
      <div className="text-center my-4">
        <div className="spinner-border text-primary" role="status"></div>
        <p>Loading itineraries...</p>
      </div>
    );
  }

  if (itineraries.length === 0) {
    return (
      <div className="alert alert-info mt-3">
        No itineraries available for this destination.  
        <br />
        <button className="btn btn-sm btn-primary mt-2">Create New Itinerary</button>
      </div>
    );
  }

  return (
    <div className="row mt-3">
      {itineraries.map((itinerary) => (
        <div className="col-md-6 mb-4" key={itinerary.id}>
          <div className="card h-100 shadow-sm border-0">
            <div className="card-body">
              <h5 className="card-title fw-bold">{itinerary.destination}</h5>
              <p className="text-muted">Duration: {itinerary.duration}</p>

              <h6 className="mt-3">Activities</h6>
              <ul className="mb-2">
                {itinerary.activities.map((act, i) => (
                  <li key={i}>{act}</li>
                ))}
              </ul>

              <h6>Lodging</h6>
              <p>{itinerary.lodging}</p>

              <h6>Dining</h6>
              <p>{itinerary.dining}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  );
}
